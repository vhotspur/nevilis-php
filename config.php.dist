<?php

function nevilis_configure() {
	/*
	 * Path where files are stored.
	 */
	option('file_dir', 'dev_files');
	
	/*
	 * Path to the database in the format understood by the
	 * PHP PDO adapter.
	 */
	option('database', 'sqlite:db/dev.db');
	
	/*
	 * Language of your choice.
	 */
	option('l10n', 'en_US.utf8');
	
	/*
	 * Custom text for the footer. This text is not escaped, feel
	 * free to use HTML tags but also take care of proper escaping ;-).
	 */
	option('footer', '');
	
	/*
	 * Set to true to disable the whole site. Useful when upgrading
	 * the database etc.
	 */
	option('sitedown', false);
	
	/*
	 * Set to true to enable debugging prints.
	 */
	option('debug', false);
}
